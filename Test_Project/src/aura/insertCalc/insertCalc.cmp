<aura:component >
    <aura:attribute name="amount" type="Decimal" required="true"/>
    <aura:attribute name="rate" type="Integer" required="true"/>
    <aura:attribute name="year" type="Integer" default="1"/>
    <aura:attribute name="interest" type="Decimal"/>
    <aura:handler name="init" value="{!this}" action="{!c.show}"/>
    <div>
        Amount : {!v.amount} <br/><br/>
        Rate : {!v.rate} <br/><br/>
        Year : {!v.year}<br/><br/>
        Interest : {!v.interest}
    </div>
</aura:component>